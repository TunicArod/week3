    <script>
        // Function to calculate total based on wood type, project type, and quantity
        function calculateTotal() {
            var woodPrices = {
                "Oak": 100,
                "Pine": 50,
                "Walnut": 200,
                "Maple": 150,
                "Plywood": 80
            };

            var projectPrices = {
                "Book Case": 250,
                "Cabinets": 500,
                "Custom": 350
            };

            var selectedWood = document.getElementById("Wood").value;
            var total = woodPrices[selectedWood];

            // Add project type prices with quantities
            var totalItems = 0;
            if (document.getElementById("Project1").checked) {
                var quantity1 = parseInt(document.getElementById("quantity1").value);
                total += projectPrices["Book Case"] * quantity1;
                totalItems += quantity1;
            }

            if (document.getElementById("Project2").checked) {
                var quantity2 = parseInt(document.getElementById("quantity2").value);
                total += projectPrices["Cabinets"] * quantity2;
                totalItems += quantity2;
            }

            if (document.getElementById("Project3").checked) {
                var quantity3 = parseInt(document.getElementById("quantity3").value);
                total += projectPrices["Custom"] * quantity3;
                totalItems += quantity3;
            }

            // Display total price
            document.getElementById("totalPrice").textContent = total;
            document.getElementById("totalContainer").style.display = "block";
        }
    </script>

