            <!-- Type of Project Field (Checkboxes) -->
            <div class="form-group">
                <label>Project Type:</label>
                <input type="checkbox" id="Project1" name="Project Type" value="Book Case">
                <label for="Project1">Book Case</label>
                <input type="number" id="quantity1" name="quantity1" value="1" min="1" style="width: 60px;" required><br>

                <input type="checkbox" id="Project2" name="Project Type" value="Cabinets">
                <label for="Project2">Cabinets</label>
                <input type="number" id="quantity2" name="quantity2" value="1" min="1" style="width: 60px;" required><br>

                <input type="checkbox" id="Project3" name="Project Type" value="Custom">
                <label for="Project3">Custom</label>
                <input type="number" id="quantity3" name="quantity3" value="1" min="1" style="width: 60px;" required><br>
            </div>

            <!-- Message Field -->
            <div class="form-group">
